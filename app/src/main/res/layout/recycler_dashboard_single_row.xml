<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerDashboard_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgMovieImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"/>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/name_of_the_movie"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtMovieDirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMovieName"
            android:padding="8dp"
            android:text="@string/name_of_the_director"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtMovieRating"
        android:layout_width="100dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:textColor="#ffca28"
        android:text="@string/movie_rating_1"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_ratings">

    </TextView>

</LinearLayout>